<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<android.support.v7.widget.CardView
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="12dp"
    app:contentPaddingTop="6dp"
    app:contentPaddingLeft="6dp"
    app:contentPaddingRight="6dp"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



    <ImageView
        android:id="@+id/imgparcel"
        android:layout_width="62dp"
        android:layout_height="match_parent"
        android:src="@drawable/task"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/txtDestinationCode"
        android:layout_toRightOf="@+id/imgparcel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Destination code : "
        android:textColor="@color/black"
        android:layout_marginStart="12dp"
        android:fontFamily="casual"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="1dp"/>
    <TextView
        android:id="@+id/txtDescription"
        android:layout_toRightOf="@+id/imgparcel"
        android:layout_below="@+id/txtDestinationCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:fontFamily="casual"
        android:layout_marginTop="0dp"
        android:padding="8dp"
        android:text="Description"
        android:paddingBottom="6dp"
        android:layout_marginBottom="6dp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>


</RelativeLayout>