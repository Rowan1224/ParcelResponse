<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/taskdetails"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="Task Details"
        android:textSize="26sp"
        android:gravity="center"

        android:textStyle="italic"
        android:textColor="#2C3E50"/>

    <RelativeLayout
        android:id="@+id/reL1"
        android:layout_below="@+id/taskdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="16dp"
        android:layout_marginTop="40dp">
        <TextView
            android:id="@+id/txtmail"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Sender Name"
            android:textSize="18sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/k1"
            android:layout_toRightOf="@+id/txtmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":  "
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/txtFmail"
            android:layout_toRightOf="@+id/k1"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:text="Rifat"
            android:textSize="18sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/reL2"
        android:layout_below="@+id/reL1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="16dp"
        android:layout_marginTop="26dp">
        <TextView
            android:id="@+id/txtphone"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Sender Phone"
            android:textSize="18sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/k2"
            android:layout_toRightOf="@+id/txtphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":  "
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/txtFphone"
            android:layout_toRightOf="@+id/k2"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:text="01xxxxxxxxx"
            android:textSize="18sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/reL3"
        android:layout_below="@+id/reL2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="16dp"
        android:layout_marginTop="26dp">
        <TextView
            android:id="@+id/txtadress"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Sender Address"
            android:textSize="18sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/k3"
            android:layout_toRightOf="@+id/txtadress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":  "
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/txtFadress"
            android:layout_toRightOf="@+id/k3"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:text="Sector-2, Road no 12, House no 33, Dhaka, Bangladesh"
            android:textSize="18sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/reL4"
        android:layout_below="@+id/reL3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="16dp"
        android:layout_marginTop="26dp">
        <TextView
            android:id="@+id/txtprice"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Rec Phone"
            android:textSize="18sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/k4"
            android:layout_toRightOf="@+id/txtprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":  "
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/txtFprice"
            android:layout_toRightOf="@+id/k4"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:text="0156666666"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reL4"
        android:layout_marginTop="62dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/btnAccept"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_accept"
            android:text="Accept"
            android:gravity="center"
            android:textColor="@color/black"/>

        <TextView
            android:layout_toRightOf="@+id/btnAccept"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_cancel"
            android:layout_marginLeft="26dp"
            android:text="Cancel"
            android:gravity="center"
            android:textColor="@color/black"/>

    </RelativeLayout>

</RelativeLayout>